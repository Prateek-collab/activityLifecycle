<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imgtonyStark"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:src="@drawable/tony_stark"/>

    <TextView
    android:id="@+id/txtSubheading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_centerInParent="true"
    android:text="Tony Stark"
    android:layout_below="@id/imgtonyStark"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="#42a5f5"
    android:padding="8dp" />


    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtSubheading"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#81c784"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/txtnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 11155555"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtemail"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#81c784"
        android:textStyle="bold"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/etblank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name or email here"
        android:layout_below="@id/txtnumber"
        android:textSize="14sp"
        android:padding="8dp"
        android:textStyle="italic"
        android:layout_margin="25dp"
        android:background="#ffff"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etblank2"
        android:layout_below="@id/etblank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your code here"
        android:textSize="14sp"
        android:padding="8dp"
        android:textStyle="italic"
        android:layout_margin="25dp"
        android:background="#ffff"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="click here"
        android:layout_alignParentBottom="true"
        android:textColor="#ffff"
        android:background="#42a5f5"
        android:textStyle="bold"
        android:textSize="15sp"/>

</RelativeLayout>