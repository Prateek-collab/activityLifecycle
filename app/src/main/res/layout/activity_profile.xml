<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/tony_stark"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:layout_toRightOf="@+id/imgTonyStark"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tony@starkindustries.com"
        android:layout_toRightOf="@+id/imgTonyStark"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 11155555"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@+id/txtEmail"
        android:layout_marginTop="15dp"
        android:textStyle="italic"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btnButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgTonyStark"
        android:layout_margin="20dp"
        android:background="#2196f3"
        android:text="Click here"
        android:textColor="#fafafa"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="#f44336"
        android:text="EXIT"
        android:textColor="#fafafa"/>


</RelativeLayout>